
.container {
		background-color: #f5f5f5;
		height: 100vh;
}
.personal_title {
		display: block;
		margin-left: 3%;
		font-size: 35rpx;
		color: #000;
		height: 5vh;
		width: 100vw;
		line-height: 5vh;
		font-weight: bold;
}

	/* picture_information */
.picture_information {
		background-color: #f2f2f2;
		height: 10vh;
		margin-top: 2vh;
		margin-left: 3%;
}
.information_image {
		width: 750rpx;
		height: 9vh;
		position: relative;
}
.information_img {
		width: 9vh;
		height: 9vh;
		border-radius: 50%;
}
.information_nsd {
		position: absolute;

		left: 10vh;
		top: 0vh;
		margin-top: 4.5vh;
		margin-left: 5%;
		transform: translateY(-50%);
}
.information_name {

		font-size: 30rpx;
}
.information_sex {

		font-size: 30rpx;
		color: gray;
}
.information_duties {

		font-size: 30rpx;
		color: red;
		background-color: #F1BFC3;
}

	/* information_phone */
.information_phone,
	.information_idcard {
		height: 5vh;
		width: 94vw;
		margin-top: 2vh;
		margin-left: 3vw;
		border-bottom: #e9e9e9 1px solid;
		box-sizing: border-box;
		font-size: 30rpx;
		position: relative;
		background-color: f2f2f2;
}
.information_ph,
	.information_id {
		position: absolute;
		right: 0;
}

	/* information_shift */
.information_shift,
	.information_authorize {
		height: 5vh;
		width: 100vw;
		margin-left: 3%;
		font-size: 35rpx;
		background-color: #f5f5f5;
		margin-top: 2vh;
		line-height: 5vh;
}
.info_shift,
	.info_authorize {
		font-size: 35rpx;
		font-weight: bold;
}

	/* information_managedclass */
.information_managedclass,
	information_authorizedcategory {
		width: 100vw;
		background-color: #f2f2f2;
}
.information_class {
		width: 94vw;
		height: 8vh;
		margin-left: 3vw;
		margin-top: 2vh;
		border-radius: 8rpx;
		border: 1px solid #e9e9e9;
		line-height: 8vh;
		position: relative;
		box-sizing: border-box;
}
.class_grade,
	.class_number,
	.class_type {
		font-size: 30rpx;
}
.class_type {
		color: #0D89C9;
		background-color: #E3F5FF;
}
.class_number {
		position: absolute;
		right: 0;
		font-weight: bold;
}

	/* information_authorizedcategory */
.info_authorizedcategory {
		width: 94vw;
		height: 5vh;
		margin-left: 3vw;
		margin-top: 2vh;
		border-radius: 8rpx;
		border-bottom: 1px solid #e9e9e9;
		line-height: 5vh;
		position: relative;
		box-sizing: border-box;
		background-color: #F2F2F2;
}
		/* New style for "æ— " */
.no_classes {
			width: 94vw;
			height: 8vh;
			margin-left: 3vw;
			margin-top: 2vh;
			line-height: 8vh;
			text-align: center;
			font-size: 30rpx;
			color: gray;
}
