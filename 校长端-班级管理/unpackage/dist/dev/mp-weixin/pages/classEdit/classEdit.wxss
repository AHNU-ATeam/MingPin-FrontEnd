
.page-container.data-v-4f8ffde8 {
  display: flex;
  flex-direction: column;
  padding: 20px;
  box-sizing: border-box;
}
.form-item.data-v-4f8ffde8 {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
}
.label.data-v-4f8ffde8 {
  color: #000;
  font-size: 18px;
}
.need-label.data-v-4f8ffde8 {
  color: red;
}
.select-input.data-v-4f8ffde8 {
  flex: 1;
  text-align: right;
  padding-right: 10px;
  font-size: 16px;
  color: #999;
}
.dashed-line.data-v-4f8ffde8{
  border-bottom: 1px dashed #b6b6b6 ;
  margin-bottom: 10px;
  width: 100%;
}
.custom-picker.data-v-4f8ffde8 {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: white;
  border-top: 2px solid white;
  border-top-right-radius: 30px;
  border-top-left-radius: 30px;
  z-index: 1000; /* 确保在最上层 */
}
.picker-header.data-v-4f8ffde8 {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px;
}
.picker-title.data-v-4f8ffde8 {
  flex: 1;
  text-align: center;
}
.close-picker.data-v-4f8ffde8 {
	font-size: 26px;
	font-weight: bold;
	margin-right: 20px;
  cursor: pointer;
}
.picker-body.data-v-4f8ffde8 {
  max-height: 300px;
  overflow-y: auto;
}
.type-group.data-v-4f8ffde8 {
  padding: 10px;
}
.classtype.data-v-4f8ffde8 {
  font-weight: bold;
  margin: 5px;
}
.subtype-options.data-v-4f8ffde8 {
  display: flex;
  flex-wrap: wrap;
}
.subtype-options view.data-v-4f8ffde8 {
  background-color: #ddd;
  padding: 5px 10px;
  margin: 5px;
  border: 5px solid #ddd;
  border-radius: 15px;
  cursor: pointer;
}
.subtype-options view.selected.data-v-4f8ffde8 {
  background-color: #FFA500;
  color: white;
  border-color: #FFA500;
}
.footer-nav.data-v-4f8ffde8 {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 10px 0;
  text-align: center;
}
.footer-nav button.data-v-4f8ffde8 {
  margin: 15px;
  background-color: #FFA500;
  color: white;
  border: none;
  border-radius: 25px;
  padding: 10px 0px;
  font-size: 16px;
  font-weight: bold;
}
.picker-button.data-v-4f8ffde8 {
  margin: 15px;
  margin-bottom: 25px;
  background-color: #FFA500;
  color: white;
  border: none;
  border-radius: 25px;
  padding: 10px 0px;
  font-size: 16px;
  font-weight: bold;
}
.mask.data-v-4f8ffde8 {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5); /* 半透明黑色背景 */
  z-index: 600; /* 确保在自定义选择器下层 */
}
